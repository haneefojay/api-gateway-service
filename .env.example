# API Gateway Service Environment Variables
# Copy this file to .env and update with your values

# Service Configuration
SERVICE_NAME=api-gateway
SERVICE_PORT=8000
ENVIRONMENT=development
DEBUG=true

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=notifications.direct

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_DECODE_RESPONSES=true

# JWT Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Circuit Breaker
CIRCUIT_BREAKER_FAIL_MAX=5
CIRCUIT_BREAKER_TIMEOUT=60

# Other Service URLs (for inter-service communication)
USER_SERVICE_URL=http://localhost:8001
TEMPLATE_SERVICE_URL=http://localhost:8002
EMAIL_SERVICE_URL=http://localhost:8003
PUSH_SERVICE_URL=http://localhost:8004

# Notification Settings
NOTIFICATION_STATUS_TTL=604800
IDEMPOTENCY_TTL=86400

# Logging
LOG_LEVEL=INFO